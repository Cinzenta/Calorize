<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_status_bar"
        tools:context=".AtividadePrincipal"> <ImageButton
        android:id="@+id/backArrow"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@null"
        android:padding="6dp"
        android:contentDescription="Voltar"
        app:srcCompat="@drawable/ic_arrow_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/text_ola_usuario"
            style="@style/SaudacaoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Olá Maria"
            app:layout_constraintTop_toTopOf="@id/backArrow"
            app:layout_constraintBottom_toBottomOf="@id/backArrow"
            app:layout_constraintStart_toEndOf="@id/backArrow"
            android:layout_marginStart="16dp" />

        <ImageButton
            android:id="@+id/btn_menu_drawer"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@null"
            android:padding="6dp"
            android:contentDescription="Abrir Menu"
            app:srcCompat="@drawable/baseline_menu_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"/>

        <ImageView
            android:id="@+id/image_maca_contorno"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/maca_branca"
            android:contentDescription="Contorno de uma maçã"
            app:layout_constraintTop_toBottomOf="@+id/text_ola_usuario"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"/>

        <ImageView
            android:id="@+id/image_maca_cheia"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/maca_cheia_progresso"
            android:contentDescription="Maçã preenchida"
            app:layout_constraintTop_toTopOf="@+id/image_maca_contorno"
            app:layout_constraintBottom_toBottomOf="@+id/image_maca_contorno"
            app:layout_constraintStart_toStartOf="@+id/image_maca_contorno"
            app:layout_constraintEnd_toEndOf="@+id/image_maca_contorno"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/text_calorias_maca"
            style="@style/CaloriasNaMacaText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1500/2000"
            app:layout_constraintTop_toTopOf="@+id/image_maca_contorno"
            app:layout_constraintBottom_toBottomOf="@+id/image_maca_contorno"
            app:layout_constraintStart_toStartOf="@+id/image_maca_contorno"
            app:layout_constraintEnd_toEndOf="@+id/image_maca_contorno"/>

        <LinearLayout
            android:id="@+id/layout_macros_sumario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintTop_toBottomOf="@+id/image_maca_contorno"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp">

            <androidx.cardview.widget.CardView
                style="@style/MacroBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        style="@style/MacroText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Proteína" />
                    <TextView
                        android:id="@+id/text_proteina_sumario"
                        style="@style/MacroText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10/50" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/MacroBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        style="@style/MacroText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Carboidrato" />
                    <TextView
                        android:id="@+id/text_carboidrato_sumario"
                        style="@style/MacroText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10/50" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/MacroBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        style="@style/MacroText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gordura" />
                    <TextView
                        android:id="@+id/text_gordura_sumario"
                        style="@style/MacroText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10/50" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="24dp"
            android:paddingBottom="16dp"
            app:layout_constraintTop_toBottomOf="@+id/layout_macros_sumario"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:id="@+id/cards_refeicoes_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_cafe_da_manha"
                    style="@style/RefeicaoCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="24dp"
                        android:paddingEnd="24dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp">

                        <TextView
                            android:id="@+id/text_titulo_cafe"
                            style="@style/RefeicaoTituloText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Café da Manhã"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true" />

                        <ImageButton
                            android:id="@+id/btn_add_cafe"
                            style="@style/AddIcon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignTop="@id/text_titulo_cafe"
                            android:layout_alignBottom="@id/text_titulo_cafe"/>

                        <TextView
                            android:id="@+id/text_alimento_cafe"
                            style="@style/AlimentoText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" "
                            android:layout_below="@id/text_titulo_cafe"
                            android:layout_marginTop="4dp"
                            android:layout_alignParentStart="true" />

                        <TextView
                            android:id="@+id/text_quantidade_cafe"
                            style="@style/AlimentoText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" "
                            android:layout_below="@id/text_titulo_cafe"
                            android:layout_alignEnd="@id/btn_add_cafe"
                            android:layout_marginTop="4dp"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_almoco"
                    style="@style/RefeicaoCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="24dp"
                        android:paddingEnd="24dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp">

                        <TextView
                            android:id="@+id/text_titulo_almoco"
                            style="@style/RefeicaoTituloText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Almoço"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true" />

                        <ImageButton
                            android:id="@+id/btn_add_almoco"
                            style="@style/AddIcon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignTop="@id/text_titulo_almoco"
                            android:layout_alignBottom="@id/text_titulo_almoco"/>

                        <TextView
                            android:id="@+id/text_alimento_almoco"
                            style="@style/AlimentoText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" "
                            android:layout_below="@id/text_titulo_almoco"
                            android:layout_marginTop="4dp"
                            android:layout_alignParentStart="true" />

                        <TextView
                            android:id="@+id/text_quantidade_almoco"
                            style="@style/AlimentoText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" "
                            android:layout_below="@id/text_titulo_almoco"
                            android:layout_alignEnd="@id/btn_add_almoco"
                            android:layout_marginTop="4dp"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_jantar"
                    style="@style/RefeicaoCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="24dp"
                        android:paddingEnd="24dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp">

                        <TextView
                            android:id="@+id/text_titulo_jantar"
                            style="@style/RefeicaoTituloText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jantar"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true" />

                        <ImageButton
                            android:id="@+id/btn_add_jantar"
                            style="@style/AddIcon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignTop="@id/text_titulo_jantar"
                            android:layout_alignBottom="@id/text_titulo_jantar"/>

                        <TextView
                            android:id="@+id/text_alimento_jantar"
                            style="@style/AlimentoText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/text_titulo_jantar"
                            android:layout_marginTop="4dp"
                            android:layout_alignParentStart="true" />

                        <TextView
                            android:id="@+id/text_quantidade_jantar"
                            style="@style/AlimentoText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/text_titulo_jantar"
                            android:layout_alignEnd="@id/btn_add_jantar"
                            android:layout_marginTop="4dp"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_lanche"
                    style="@style/RefeicaoCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="24dp"
                        android:paddingEnd="24dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:layout_marginBottom="24dp">

                        <TextView
                            android:id="@+id/text_titulo_lanche"
                            style="@style/RefeicaoTituloText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lanche"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true" />

                        <ImageButton
                            android:id="@+id/btn_add_lanche"
                            style="@style/AddIcon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignTop="@id/text_titulo_lanche"
                            android:layout_alignBottom="@id/text_titulo_lanche"/>

                        <TextView
                            android:id="@+id/text_alimento_lanche"
                            style="@style/AlimentoText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" "
                            android:layout_below="@id/text_titulo_lanche"
                            android:layout_marginTop="4dp"
                            android:layout_alignParentStart="true" />

                        <TextView
                            android:id="@+id/text_quantidade_lanche"
                            style="@style/AlimentoText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" "
                            android:layout_below="@id/text_titulo_lanche"
                            android:layout_alignEnd="@id/btn_add_lanche"
                            android:layout_marginTop="4dp"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/menu"
        app:menu="@menu/menu" />
</androidx.drawerlayout.widget.DrawerLayout>